<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.lcaohoanq.fucar.controllers.RentingManagementController">
  <children>
    <!-- Form -->
    <Label layoutX="30.0" layoutY="30.0" text="Customer" />
    <ComboBox fx:id="customerComboBox" layoutX="150.0" layoutY="30.0" prefWidth="200.0" />

    <Label layoutX="30.0" layoutY="70.0" text="Car" />
    <ComboBox fx:id="carComboBox" layoutX="150.0" layoutY="70.0" prefWidth="200.0" />

    <Label layoutX="30.0" layoutY="110.0" text="Pickup Date" />
    <DatePicker fx:id="pickupDatePicker" layoutX="150.0" layoutY="110.0" />

    <Label layoutX="30.0" layoutY="150.0" text="Return Date" />
    <DatePicker fx:id="returnDatePicker" layoutX="150.0" layoutY="150.0" />

    <Label layoutX="30.0" layoutY="190.0" text="Rent Price" />
    <TextField fx:id="rentPriceField" layoutX="150.0" layoutY="190.0" />

    <Label layoutX="30.0" layoutY="230.0" text="Status" />
    <ComboBox fx:id="statusComboBox" layoutX="150.0" layoutY="230.0" prefWidth="200.0" />

    <Button fx:id="saveButton" layoutX="150.0" layoutY="280.0" text="Save" />
    <Button fx:id="cancelButton" layoutX="260.0" layoutY="280.0" text="Cancel" />

    <!-- Table for displaying Cars -->
    <ScrollPane fitToHeight="true" hbarPolicy="ALWAYS" layoutX="400.0" layoutY="30.0" prefHeight="300.0" prefWidth="400.0">
      <TableView fx:id="tblCars" prefWidth="800.0">
        <columns>
          <TableColumn fx:id="carId" prefWidth="75.0" text="Car ID" />
          <TableColumn fx:id="carName" prefWidth="100.0" text="Car Name" />
          <TableColumn fx:id="carModelYear" prefWidth="100.0" text="Car Model Year" />
          <TableColumn fx:id="color" prefWidth="75.0" text="Color" />
          <TableColumn fx:id="capacity" prefWidth="75.0" text="Capacity" />
          <TableColumn fx:id="description" prefWidth="150.0" text="Description" />
          <TableColumn fx:id="importDate" prefWidth="100.0" text="Import Date" />
          <TableColumn fx:id="rentPrice" prefWidth="100.0" text="Rent Price" />
          <TableColumn fx:id="producer" prefWidth="100.0" text="Producer" />
        </columns>
      </TableView>
    </ScrollPane>
  </children>
</AnchorPane>
