<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="582.0" prefWidth="1170.0" xmlns="http://javafx.com/javafx/22"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lcaohoanq.fucar.controllers.CarManagement">

  <Label layoutX="231.0" layoutY="-7.0" prefHeight="100" prefWidth="238.0" text="Car Management">
    <font>
      <Font size="24.0"/>
    </font>
  </Label>

  <!-- Customer Fields -->
  <Label layoutX="43.0" layoutY="98.0" text="Car ID"/>
  <TextField fx:id="txtCarID" layoutX="150.0" layoutY="93.0" prefHeight="26.0" prefWidth="400.0"/>

  <Label layoutX="43.0" layoutY="141.0" text="Car Name"/>
  <TextField fx:id="txtCarName" layoutX="150.0" layoutY="136.0" prefHeight="26.0"
    prefWidth="400.0"/>

  <Label layoutX="43.0" layoutY="184.0" text="Car Model Year"/>
  <TextField fx:id="txtModelYear" layoutX="150.0" layoutY="179.0" prefHeight="26.0"
    prefWidth="400.0"/>

  <Label layoutX="43.0" layoutY="227.0" text="Color"/>
  <TextField fx:id="txtColor" layoutX="150.0" layoutY="265.0" prefHeight="26.0" prefWidth="400.0"/>

  <Label layoutX="43.0" layoutY="270.0" text="Capacity"/>
  <TextField fx:id="txtCapacity" layoutX="150.0" layoutY="265.0" prefHeight="26.0"
    prefWidth="400.0"/>

  <Label layoutX="43.0" layoutY="313.0" text="Description"/>
  <TextField fx:id="txtDescription" layoutX="150.0" layoutY="308.0" prefHeight="26.0"
    prefWidth="400.0"/>

  <Label layoutX="43.0" layoutY="356.0" text="Import Date"/>
  <DatePicker fx:id="dpImportDate" layoutX="150.0" layoutY="351.0" prefHeight="26.0"
    prefWidth="400.0"/>

  <Label layoutX="43.0" layoutY="528.0" text="Producer"/>
  <ComboBox fx:id="cbProducer" layoutX="150.0" layoutY="523.0" prefHeight="26.0" prefWidth="400.0"/>

  <!-- Table for displaying Users -->
  <ScrollPane fitToHeight="true" hbarPolicy="ALWAYS" layoutX="601.0" layoutY="96.0"
    prefHeight="373.0" prefWidth="567.0">
    <TableView fx:id="tblCars" prefWidth="800.0">
      <columns>
        <TableColumn fx:id="carId" prefWidth="75.0" text="Car ID"/>
        <TableColumn fx:id="carName" prefWidth="75.0" text="Car Name"/>
        <TableColumn fx:id="carModelYear" prefWidth="75.0" text="Car Model Year"/>
        <TableColumn fx:id="color" prefWidth="75.0" text="Color"/>
        <TableColumn fx:id="capacity" prefWidth="75.0" text="Capacity"/>
        <TableColumn fx:id="description" prefWidth="75.0" text="Description"/>
        <TableColumn fx:id="importDate" prefWidth="75.0" text="Import Date"/>
        <TableColumn fx:id="rentPrice" prefWidth="75.0" text="Rent Price"/>
        <TableColumn fx:id="producer" prefWidth="75.0" text="Producer"/>
      </columns>
    </TableView>
  </ScrollPane>

  <!-- Buttons -->
  <Button fx:id="btnAdd" layoutX="598.0" layoutY="505.0" mnemonicParsing="false"
    onAction="#btnAddOnAction" prefHeight="46.0" prefWidth="125.0" text="Add"/>
  <Button fx:id="btnUpdate" layoutX="748.0" layoutY="505.0" mnemonicParsing="false"
    onAction="#btnUpdateOnAction" prefHeight="46.0" prefWidth="125.0" text="Update"/>
  <Button fx:id="btnDelete" layoutX="896.0" layoutY="505.0" mnemonicParsing="false"
    onAction="#btnDeleteOnAction" prefHeight="46.0" prefWidth="125.0" text="Delete"/>
  <Button fx:id="btnCancel" layoutX="1045.0" layoutY="505.0" mnemonicParsing="false"
    onAction="#btnCancelOnAction" prefHeight="46.0" prefWidth="125.0" text="Cancel"/>
</AnchorPane>
