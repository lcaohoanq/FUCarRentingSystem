<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lcaohoanq.fucar.controllers.MyPurchaseController">
  <children>
    <HBox prefHeight="100.0" prefWidth="1300.0">
      <children>
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="128.0" prefWidth="1300.0" text="My Purchase">
          <font>
            <Font size="36.0" />
          </font>
        </Label>
      </children>
    </HBox>

    <!-- Buttons -->
    <HBox layoutX="70.0" layoutY="450.0" spacing="10" />

    <!-- Car Rentals Table -->
    <TableView fx:id="tblCarRentals" layoutX="98.0" layoutY="114.0" prefHeight="359.0" prefWidth="1092.0">
      <columns>
        <TableColumn fx:id="id" prefWidth="50.0" text="ID" />
        <TableColumn fx:id="customerId" prefWidth="120.0" text="Customer" />
        <TableColumn fx:id="carId" prefWidth="120.0" text="Car" />
        <TableColumn fx:id="pickupDate" prefWidth="120.0" text="Pickup Date" />
        <TableColumn fx:id="returnDate" prefWidth="120.0" text="Return Date" />
        <TableColumn fx:id="rentPrice" prefWidth="120.0" text="Rent Price" />
        <TableColumn fx:id="status" prefWidth="131.0" text="Status" />
      </columns>
    </TableView>
  <Button fx:id="btnCancel" layoutX="1108.0" layoutY="503.0" prefHeight="49.0" prefWidth="104.0" text="Cancel" />
  </children>
</AnchorPane>
